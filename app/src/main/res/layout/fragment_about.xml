<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".setting.AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="?attr/colorPrimary"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo" />

        <TextView
            android:id="@+id/txtVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="version 1.1.101"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingVertical="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDeveloperTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer Team"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingVertical="10dp"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/txtName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="1. Wong Kak Lok (B032010436)" />

            <TextView
                android:id="@+id/txtName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="2. Muhammad Haziq Bin Mohd Hapiz (B032010199)" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>